<div class="contact-form">
<!-- Heading -->
<h3>Contact Form</h3>
<!-- Form -->
<%= form_for(@contact) do |f| %>
	<% if @contact.errors.any? %>
	<div id="error_explanation">
	  <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this line_item from being saved:</h2>

	  <ul>
	  <% @contact.errors.full_messages.each do |message| %>
	    <li><%= message %></li>
	  <% end %>
	  </ul>
	</div>
	<% end %>
	<div class="form-group">
		<!-- Form input -->
		<%= f.text_field :name, placeholder: "Name", class: "form-control" %>
	</div>
	<div class="form-group">
		<!-- Form input -->
		<%= f.email_field :email, placeholder: "Email", class: "form-control" %>
	</div>
	<div class="form-group">
		<!-- Form text area -->
		<%= f.text_area :feedback, placeholder: "Message...", class: "form-control", rows: 3 %>
	</div>
	<!-- Form button -->
	<%= f.submit "Send", class: "btn btn-danger btn-sm" %>
<% end %>
</div><!--/ Contact form end -->
