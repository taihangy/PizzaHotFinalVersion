<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h1><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h1>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<fieldset>
      <h1>Enter Detailed Information of New Product</h1>
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description %>
      </div>
      <div class="field">
        <%= f.label :image_url %><br>
        <%= f.text_field :image_url %>
      </div>
      <div class="field">
        <%= f.label :price %><br>
        <%= f.text_field :price %>
      </div>
      <div class="field">
        <%= f.label :catagory %><br>
        <%= f.select :catagory, Product::PRODUCT_TYPES, prompt: 'Select a product catagory', class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Submit", class: "btn btn-danger btn-sm"%>&nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to 'Back', products_path, class: "btn btn-default btn-sm"%>
      </div>
    </fieldset>
  <% end %>