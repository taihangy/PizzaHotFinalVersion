<!-- Banner Start -->
  <div class="banner padd">
    <div class="container">
      <!-- Image -->
      <%= image_tag("crown-white.png", class: "img-responsive") %>
      <!-- Heading -->
      <h2 class="white">List of Orders</h2>
      <ol class="breadcrumb">
        <li>Home</li>
        <li>User</li>
        <li class="active">List of Orders</li>
      </ol>
      <div class="clearfix"></div>
    </div>
  </div>
  <!-- Banner End -->
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-12">

        <div class="table-responsive" style = "margin-top:40px">
          <table class="table">
            <tr>
            <th>Status</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Pay type</th>
            <th colspan="3">Operation</th>
          </tr>
            <tbody>
              <% @orders.each do |order| %>
              <tr>
                <td><%= order.status %></td>
                <td><%= order.name %></td>
                <td><%= order.address %></td>
                <td><%= order.phone %></td>
                <td><%= order.email %></td>
                <td><%= order.pay_type %></td>
                <td><%= link_to 'Show', order, class: "btn btn-info btn-sm" %></td>
                <% if order.status === "received" %>
                  <td><%= link_to 'Ship', order_path(order), method: :put, class: "btn btn-info btn-sm" %></td>
                  <td><%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
                <% end %>
                
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <p><%= will_paginate @orders %></p>
  </div>

