<!-- Banner Start -->
  <div class="banner padd">
    <div class="container">
      <!-- Image -->
      <%= image_tag("crown-white.png", class: "img-responsive") %>
      <!-- Heading -->
      <h2 class="white">View Order</h2>
      <ol class="breadcrumb">
        <li>Home</li>
        <li>User</li>
        <li class="active">View Order</li>
      </ol>
      <div class="clearfix"></div>
    </div>
  </div>
  <!-- Banner End -->
    
  <div class="container">
    <div class="row">
        <div class="col-md-3 col-sm-3"></div>
        <div class="col-md-6 col-sm-6">
          <div class="table-responsive" style = "margin-top:40px">
            <table class="table table-bordered">
              <tr>
                <th>Status</th>
                <th><%= @order.status %></th>
              </tr>
              <tr>
                <th>Name</th>
                <th><%= @order.name %></th>
              </tr>
              <tr>
                <th>Address</th>
                <th><%= @order.address %></th>
              </tr>
              <tr>
                <th>Phone</th>
                <th><%= @order.address %></th>
              </tr>
              <tr>
                <th>Email</th>
                <th><%= @order.email %></th>
              </tr>
              <tr>
                <th>Pay Type</th>
                <th><%= @order.pay_type %></th>
              </tr>
              <% @order.line_items.each do |line_item| %>
                <tr>
                  <th><strong><%= line_item.quantity %>&nbsp;&times;&nbsp;<%= line_item.product.title %></strong></th>
                  <th><%= number_to_currency(line_item.total_price) %></th>
                </tr>
              <% end %>
              <tr>
                <th>Total price</th>
                <th><%= number_to_currency(@order.total_price) %></th>
              </tr>
            </table>
          </div>
          <div class="col-md-5 col-sm-5"></div>
          <%= link_to 'Edit', edit_order_path(@order), class: "btn btn-danger btn-sm"%>&nbsp;&nbsp;&nbsp;&nbsp;
          <%= link_to 'Back', orders_path, class: "btn btn-default btn-sm"%>
        </div>
      </div>
    </div>

